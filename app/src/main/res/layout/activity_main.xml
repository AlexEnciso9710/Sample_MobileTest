<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="19dp">


    <com.google.android.gms.maps.MapView
        android:id="@+id/Map"
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="22dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="134dp"
                android:layout_height="134dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/NameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Nombre:"
                app:layout_constraintBottom_toTopOf="@+id/LastnameText"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/LastnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="16dp"
                android:text="Apellido:"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/NameText"
                 />

            <TextView
                android:id="@+id/TVGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="16dp"
                android:text="Género: "
                app:layout_constraintTop_toBottomOf="@+id/LastnameText"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                />

            <TextView
                android:id="@+id/AgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:text="Edad:"
                app:layout_constraintTop_toBottomOf="@+id/TVGender"
                app:layout_constraintStart_toEndOf="@+id/imageView"/>


            <TextView
                android:id="@+id/ageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="70dp"
                android:text="años"
                app:layout_constraintStart_toEndOf="@+id/AgeText"
                app:layout_constraintTop_toBottomOf="@+id/TVGender"/>

            <TextView
                android:id="@+id/StreetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="25dp"
                android:text="Calle:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"/>

            <TextView
                android:id="@+id/NumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="25dp"
                android:text="Número:"
                app:layout_constraintTop_toBottomOf="@+id/StreetText"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/StateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="116dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="100dp"
                android:text="Estado:"
                app:layout_constraintStart_toEndOf="@+id/NumberText"
                app:layout_constraintTop_toBottomOf="@+id/StreetText"
                 />

            <TextView
                android:id="@+id/CountryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="18dp"
                android:text="País:"
                app:layout_constraintTop_toBottomOf="@+id/NumberText"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/CPText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="143dp"
                android:layout_marginTop="18dp"
                android:text="C.P:"
                app:layout_constraintStart_toEndOf="@+id/CountryText"
                app:layout_constraintTop_toBottomOf="@+id/StateText"/>

            <TextView
                android:id="@+id/EmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="90dp"
                android:text="E-Mail:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CountryText"/>

            <TextView
                android:id="@+id/PhoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="18dp"
                android:text="Teléfono:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/EmailText"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="146dp"
                android:layout_height="34dp"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Alberto"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/NameText"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/LastName"
                android:layout_width="141dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:inputType="textPersonName"
                android:text="Gutierrez"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/LastnameText"
                app:layout_constraintTop_toBottomOf="@+id/name"
                 />

            <EditText
                android:id="@+id/Street"
                android:layout_width="148dp"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="4dp"
                android:inputType="textPersonName"
                android:text="Lago Musters"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/AgeText"
                app:layout_constraintStart_toEndOf="@+id/StreetText"/>

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="54dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="15dp"
                android:inputType="number"
                android:text="35"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/Street"
                app:layout_constraintStart_toEndOf="@+id/NumberText"/>

            <EditText
                android:id="@+id/ETCountry"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="22dp"
                android:ems="10"
                android:inputType="number"
                android:text="México"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber2"
                app:layout_constraintStart_toEndOf="@+id/CountryText"/>

            <EditText
                android:id="@+id/ETState"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginStart="32dp"
                android:ems="10"
                android:inputType="number"
                android:text="Sinaloa"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/Street"
                app:layout_constraintStart_toEndOf="@+id/StateText"/>

            <EditText
                android:id="@+id/ETZipCode"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="34dp"
                android:ems="10"
                android:inputType="number"
                android:text="57180"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/ETState"
                app:layout_constraintStart_toEndOf="@+id/CPText"/>

            <EditText
                android:id="@+id/ETAge"
                android:layout_width="63dp"
                android:layout_height="36dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:inputType="number"
                android:text="25"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/ETGender"
                app:layout_constraintStart_toEndOf="@+id/AgeText"/>

            <EditText
                android:id="@+id/ETGender"
                android:layout_width="72dp"
                android:layout_height="37dp"
                android:layout_marginStart="36dp"
                android:inputType="number"
                android:text="Masculino"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/LastName"
                app:layout_constraintStart_toEndOf="@+id/TVGender"/>

            <EditText
                android:id="@+id/ETemail"
                android:layout_width="205dp"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="alexenciso9710@hotmail.com"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/ETZipCode"
                app:layout_constraintStart_toEndOf="@+id/EmailText"/>

            <EditText
                android:id="@+id/ETPhone"
                android:layout_width="203dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="phone"
                android:text="55 7324 6822"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/EmailText"
                app:layout_constraintStart_toEndOf="@+id/PhoneText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>